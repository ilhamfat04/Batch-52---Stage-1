<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

        * {
            font-family: 'Poppins', sans-serif;
        }

        .btn-primary {
            background-color: orangered !important;
        }

        .btn-primary:hover {
            background-color: orangered !important;
        }

        .active {
            color: orangered !important;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/assets/image/dumbways.png" style="height: 30px; width: 50px; object-fit: cover;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                </ul>
                <a href="/contact" class="btn btn-primary">Contact Me</a>
            </div>
        </div>
    </nav>

    <div class="container d-flex flex-column">
        <div class="w-100 d-flex justify-content-end mb-3">
            <a href="add-blog" class="btn btn-primary">Add New Blog</a>
        </div>
        <div id="contents">
            {{#each data}}
            <div class="card mb-3 w-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/assets/image/blog-img.png" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/blog-detail/{{@index}}" target="_blank">{{this.title}}</a>
                            </h5>
                            <p>
                                12 Juli 2021 22:30 WIB | Ichsan Emrald Alamsyah
                            </p>
                            <p class="card-text">{{this.content}}</p>
                            <p class="card-text"><small class="text-body-secondary">1 seconds ago
                                </small></p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex" style="height: fit-content;">
                        <a class="btn btn-secondary" href="/edit-blog/{{@index}}">Edit post</a>
                        <a class="btn btn-primary" href="/delete/{{@index}}">Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>

</html>